<Window x:Class="SchoolWhiteWings.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SchoolWhiteWings"
        mc:Ignorable="d"
        Title="Добавление группы" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="nameTxt"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 materialDesign:HintAssist.Hint="Введите название группы" 
                 materialDesign:HintAssist.IsFloating="True"
                 FontSize="30"
                 Margin="0 20 0 20"
                 Width="600"
                 Height="90"/>
        <Button Content="Добавить" Grid.Column="1" Grid.Row="2" Click="ButtonAdd"/>
    </Grid>
</Window>
